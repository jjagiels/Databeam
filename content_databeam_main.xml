<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="databeam.databeamui.DatabeamMain"
    tools:showIn="@layout/activity_databeam_main">

    <RadioButton
        android:id="@+id/form1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form One"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <RadioButton
        android:id="@+id/directdeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/form1"
        android:text="Direct Deposit Form"
        app:layout_constraintTop_toBottomOf="@+id/form1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/form1" />

    <RadioButton
        android:id="@+id/form3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/directdeposit"
        android:text="Form Three"
        app:layout_constraintTop_toBottomOf="@+id/directdeposit"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/directdeposit" />
</android.support.constraint.ConstraintLayout>
